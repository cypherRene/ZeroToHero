<Window x:Class="Taschenrechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taschenrechner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border CornerRadius="25" BorderBrush="GhostWhite" BorderThickness="2" Padding="6" Background="Black">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>

            <Button Grid.Row="6" Click="Button_Click" Grid.Column="0" Margin="630,5,-150,0" Background="Orange" >Rechne =</Button>
            <Button Grid.Row="5" Click="Button_Click" Grid.Column="0" Margin="630,5,-150,0" Background="Orange">Plus +</Button>
            <Button Grid.Row="4" Click="Button_Click" Grid.Column="0" Margin="630,5,-150,0" Background="Orange">Minus -</Button>
            <Button Grid.Row="3" Click="Button_Click" Grid.Column="0" Margin="630,5,-150,0" Background="Orange">Addition *</Button>
            <Button Grid.Row="2" Click="Button_Click" Grid.Column="0" Margin="630,5,-150,0" Background="Orange">Division</Button>
            
            
            <Button Grid.Row="2" Click="Button_Click" Grid.Column="0" Margin="200,5,300,0" Background="Orange">Clear</Button>
            <Button Grid.Row="2" Click="Button_Click" Grid.Column="0" Margin="350,5,150,0" Background="Orange">+/-</Button>
            <Button Grid.Row="2" Click="Button_Click" Grid.Column="0" Margin="500,5,0,0" Background="Orange">Prozent %</Button>
            
            <TextBlock Grid.Row="1" Margin="180,0,-30,0" TextAlignment="Center" Background="GhostWhite"/>




        </Grid>
    </Grid>
    </Border>
</Window>
