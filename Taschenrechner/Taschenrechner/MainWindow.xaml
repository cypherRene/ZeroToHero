<Window x:Class="Taschenrechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taschenrechner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="250"></ColumnDefinition>
                <ColumnDefinition Width="400"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>

            <Button Grid.Row="5" Click="Button_Click" Grid.Column="0" Margin="630,0,-500,0">Rechne =</Button>
            <Button Grid.Row="4" Click="Button_Click" Grid.Column="0" Margin="630,0,-500,0" RenderTransformOrigin="0.576,-1.057">Plus +</Button>
            <Button Grid.Row="3" Click="Button_Click" Grid.Column="0" Margin="630,0,-500,0">Minus -</Button>
            <Button Grid.Row="2" Click="Button_Click" Grid.Column="0" Margin="630,0,-500,0">Addition *</Button>
            <Button Grid.Row="1" Click="Button_Click" Grid.Column="0" Margin="630,0,-500,0">Division</Button>
            <TextBlock Grid.Row="1" Margin="190,0,60,0" Grid.ColumnSpan="2"/>




        </Grid>
    </Grid>

</Window>
